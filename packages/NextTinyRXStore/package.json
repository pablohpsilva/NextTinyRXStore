{
  "name": "next-tiny-rx-store",
  "version": "0.2.1",
  "description": "A tiny, performant reactive state management library for Next.js with SSR support and zero dependencies",
  "author": "Pablo Silva",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./store": {
      "import": {
        "types": "./dist/types/store.d.ts",
        "default": "./dist/esm/store.js"
      },
      "require": {
        "types": "./dist/types/store.d.ts",
        "default": "./dist/cjs/store.js"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/types/utils.d.ts",
        "default": "./dist/esm/utils.js"
      },
      "require": {
        "types": "./dist/types/utils.d.ts",
        "default": "./dist/cjs/utils.js"
      }
    },
    "./factories": {
      "import": {
        "types": "./dist/types/factories.d.ts",
        "default": "./dist/esm/factories.js"
      },
      "require": {
        "types": "./dist/types/factories.d.ts",
        "default": "./dist/cjs/factories.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "build-commands.md",
    "PUBLISHING.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/NextTinyRXStore.git"
  },
  "homepage": "https://github.com/yourusername/NextTinyRXStore#readme",
  "bugs": {
    "url": "https://github.com/yourusername/NextTinyRXStore/issues"
  },
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:esm && npm run build:cjs && npm run build:umd && npm run build:bundle-analysis",
    "build:types": "tsc -p tsconfig.types.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && npm run build:cjs-package",
    "build:cjs-package": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build:umd": "rollup -c rollup.config.js",
    "build:bundle-analysis": "npm run build:analyze-esm && npm run build:analyze-cjs",
    "build:analyze-esm": "esbuild dist/esm/index.js --bundle --minify --format=esm --outfile=dist/analysis/esm.min.js --external:react",
    "build:analyze-cjs": "esbuild dist/cjs/index.js --bundle --minify --format=cjs --outfile=dist/analysis/cjs.min.js --external:react",
    "dev": "npm run build:types -- --watch",
    "dev:esm": "npm run build:esm -- --watch",
    "dev:cjs": "npm run build:cjs -- --watch",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "size": "npm run build && npm run size:check",
    "size:check": "npm run build && echo 'Bundle sizes:' && find dist -name '*.min.js' -exec sh -c 'echo \"$1: $(wc -c < \"$1\") bytes ($(gzip -c \"$1\" | wc -c) gzipped)\"' _ {} \\;",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "perf": "node --expose-gc -r ts-node/register src/performance-runner.ts",
    "perf:basic": "vitest run src/performance.test.ts --reporter=verbose",
    "perf:react": "vitest run src/react-performance.test.tsx --reporter=verbose",
    "perf:comparative": "vitest run src/comparative-benchmarks.test.ts --reporter=verbose",
    "perf:all": "npm run perf:basic && npm run perf:react && npm run perf:comparative",
    "perf:ci": "node --expose-gc -r ts-node/register src/performance-runner.ts --ci",
    "publish:dry-run": "npm publish --dry-run",
    "publish:npm": "npm publish",
    "publish:check": "npm run build && npm run test:run && npm run publish:dry-run",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release:patch": "npm run version:patch && npm run publish:npm",
    "release:minor": "npm run version:minor && npm run publish:npm",
    "release:major": "npm run version:major && npm run publish:npm"
  },
  "keywords": [
    "react",
    "nextjs",
    "next.js",
    "state-management",
    "reactive",
    "store",
    "typescript",
    "ssr",
    "server-side-rendering",
    "hooks",
    "observable",
    "state",
    "management",
    "tiny",
    "lightweight",
    "performance",
    "zero-dependencies"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.19.3",
    "@types/react": "^18.3.3",
    "esbuild": "^0.19.12",
    "jsdom": "^23.0.1",
    "react": "^18.3.1",
    "rollup": "^4.9.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.4",
    "vitest": "^1.1.3",
    "@vitest/coverage-v8": "^1.1.3"
  },
  "peerDependencies": {
    "react": "^18.3.1"
  }
}
